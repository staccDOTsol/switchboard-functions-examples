{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "node_modules"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "lib": [
      "ES2021",
      "ES2022.Object",
      "DOM"
    ],
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "rootDir": "./src"
  }
}