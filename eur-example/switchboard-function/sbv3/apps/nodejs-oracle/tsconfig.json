{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // strict
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "inlineSourceMap": false,
  },
  "references": [
    {
      "path": "../../javascript/aptos.js"
    },
    {
      "path": "../../javascript/common"
    },
    {
      "path": "../../javascript/near.js"
    },
    {
      "path": "../../javascript/node"
    },
    {
      "path": "../../javascript/solana.js"
    },
    {
      "path": "../../javascript/sui.js"
    },
    {
      "path": "../../javascript/task-runner"
    }
  ]
}