{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "CommonJS",
    "noEmit": false,
    "esModuleInterop": true,
    "rootDir": "../",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "paths": {
      "@switchboard-xyz/solana.js": [
        "../../../javascript/solana.js"
      ]
    }
  },
  "include": [
    "./tests/**/*",
    "./client/**/*",
    "./target/types/switchboard_v2"
  ],
  "references": [
    {
      "path": "../../../javascript/solana.js"
    }
  ]
}