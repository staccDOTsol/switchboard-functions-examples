{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": [
    "node_modules",
    "tests/skiptests",
    "lib",
    "tests/**/*"
  ],
  "include": [
    "tests"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021",
      "ES2022.Object",
      "DOM"
    ],
    "moduleResolution": "nodenext",
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha"
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false
  }
}