{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./sbv2-sui.ts",
    "tests/**/*",
    "lib",
    "node_modules",
    "scripts"
  ],
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha"
    ],
    "allowJs": true,
    "checkJs": false,
    // strict
    "strict": false,
    "noImplicitAny": false
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}