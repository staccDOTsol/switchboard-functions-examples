{
  "name": "task-runner-api",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node --enable-source-maps ./dist",
    "watch": "NODE_ENV=development nodemon --watch './**/*.{ts,graphql}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "dev": "tsc-watch --onSuccess \"npm run watch\"",
    "build": "rimraf dist && node esbuild.js",
    "docker:build": "docker buildx build -f ./Dockerfile -t switchboardlabs/task-runner:dev-\"$(cat ../../version)\" --platform linux/amd64 --pull --load ./",
    "docker:publish": "docker buildx build -f ./Dockerfile -t switchboardlabs/task-runner:dev-\"$(cat ../../version)\" --platform linux/amd64 --pull --push ./",
    "postbuild": "pnpm fix",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "lint:old": "gts lint ./src",
    "fix": "gts fix ./src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@switchboard-xyz/common": "workspace:^",
    "@switchboard-xyz/solana.js": "workspace:^",
    "@switchboard-xyz/task-runner": "workspace:^",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.3",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "joi": "^17.9.1",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "winston": "^3.8.2",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@switchboard-xyz/eslint-config": "workspace:latest",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "esbuild": "^0.17.16",
    "eslint": "^8.37.0",
    "gts": "^3.1.1",
    "jest": "^29.5.0",
    "node-mocks-http": "^1.12.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  }
}
