{
  "name": "switchboard",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "javascript/*",
    "rust/*",
    "apps/*",
    "chains/solana",
    "chains/solana/examples/**",
    "chains/near/examples/*",
    "chains/evm/switchboard",
    "chains/evm/switchboar_push_receiver",
    "chains/evm/examples/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm && pnpm sort-package-json",
    "postinstall": "husky install",
    "build": "turbo run build",
    "build:lib": "turbo run build:lib",
    "build:rust": "cargo build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "fix": "turbo run fix",
    "clean": "turbo run clean",
    "clean:cargo": "find . -type d \\( -name \"target\" -o -name \"test-ledger\" -o -name \".anchor\" \\) -exec rm -rf {} +",
    "clean:js": "find . -type d \\( -name \"node_modules\" \\) -exec rm -rf {} +",
    "docker:build:gramine": "docker buildx build -f docker/Dockerfile.gramine -t switchboardlabs/gramine --platform linux/amd64 --pull  --load ./docker",
    "docker:publish:gramine": "docker buildx build -f docker/Dockerfile.gramine -t switchboardlabs/gramine --platform linux/amd64 --pull  --push ./docker",
    "docker:build:gramine-dev": "docker buildx build -f docker/Dockerfile.gramine-dev -t switchboardlabs/gramine:dev --platform linux/amd64 --pull  --load ./docker",
    "docker:publish:gramine-dev": "docker buildx build -f docker/Dockerfile.gramine-dev -t switchboardlabs/gramine:dev --platform linux/amd64 --pull  --push ./docker",
    "docker:build:sgx-function": "docker buildx build -f docker/Dockerfile.sgx-function -t switchboardlabs/sgx-function --platform linux/amd64 --pull --load ./docker",
    "docker:publish:sgx-function": "docker buildx build -f docker/Dockerfile.sgx-function -t switchboardlabs/sgx-function --platform linux/amd64 --pull --push ./docker",
    "solana:localnet": "cd chains/solana; pnpm localnet --dev",
    "evm:localnet": "cd chains/evm; pnpm localnet",
    "sort-package-json": "sort-package-json 'package.json' '{chains,javascript}/*/package.json'"
  },
  "commitlint": {
    "extends": [
      "./node_modules/@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write -u"
    ],
    "*/*.{css,less,scss,html,json,md,toml,yaml,yml}": [
      "prettier --write -u"
    ],
    "*.sol": [
      "solhint --config \"./.solhint.json\" \"chains/evm/**/{src,test}/**/*.sol\""
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@switchboard-xyz/eslint-config": "workspace:^",
    "@switchboard-xyz/evm.js": "workspace:^",
    "@types/node": "^20.4.0",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.6",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "inquirer": "8",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "solc": "0.8.17",
    "solhint": "^3.6.1",
    "sort-package-json": "latest",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "tsx": "^3.12.7",
    "turbo": "^1.10.16",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">= 18",
    "pnpm": ">= 7"
  }
}
